{
	//pages节点的第一项为应用入口页（即首页）
	// 应用中新增/减少页面，都需要对 pages 数组进行修改	
	// 文件名不需要写后缀，框架会自动寻找路径下的页面资源
	"pages": [
		{
			"path": "pages/tabBar/index/index",
			"style": {
				"navigationBarTitleText": "Meet 遇见"//标题/导航栏内容
				// "navigationBarBackgroundColor":"#007AFF",//导航栏背景色
				// "navigationBarTextStyle":"white",//导航栏字体颜色，只有black/white
				// "backgroundTextStyle":"dark"//下拉 loading 的样式，仅支持 dark/light
				// "transparentTitle":"auto"//导航栏透明设置。支持 always 一直透明 / auto 滑动自适应 / none 不透明
			}
		},
		{
			"path":"pages/tabBar/TopicOfConversation/TOC",
			"style":{
				"navigationBarTitleText":"话题"
			}
		},
		{
			"path":"pages/tabBar/Message/Message",
			"style":{
				"navigationBarTitleText":"消息"
			}
		},
		{
			"path":"pages/tabBar/Yourself/Yourself",
			"style":{
				"navigationBarTitleText":"我"
			}
		}
	],
	"tabBar": {
	    "color": "#7A7E83",//未选中的颜色
	    "selectedColor": "#00aaff",//被选中的颜色
	    "borderStyle": "black",
	    "backgroundColor": "#ffffff",
	    "list": [{
	        "pagePath": "pages/tabBar/index/index",
	        "iconPath": "static/image/1.jpg",
	        "selectedIconPath": "static/image/icon_selected.jpg",
	        "text": "首页"
	    }, {
	        "pagePath": "pages/tabBar/TopicOfConversation/TOC",
	        "iconPath": "static/image/2.jpg",//未被选中的图片81px*81px
	        "selectedIconPath": "static/image/icon_selected.jpg",//被选中的图片
	        "text": "动态"
	    }, {
	        "pagePath": "pages/tabBar/Message/Message",
	        "iconPath": "static/image/3.jpg",
	        "selectedIconPath": "static/image/icon_selected.jpg",
	        "text": "话题"
	    }, {
	        "pagePath": "pages/tabBar/Yourself/Yourself",
	        "iconPath": "static/image/4.jpg",
	        "selectedIconPath": "static/image/icon_selected.jpg",
	        "text": "我"
	    }]
	},
	"globalStyle": {
		"navigationBarTextStyle": "white",
		"navigationBarBackgroundColor": "#007AFF",
		"backgroundColor": "#FFFFFF"
	}
}